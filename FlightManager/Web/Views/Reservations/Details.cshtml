@model Web.Models.Reservations.ReservationDetailsListViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Reservation details</h1>

<table class="table">
    <thead>
        <tr>
            <th colspan="7" style="text-align:center; border-top:none;">
                Plane №@Model.PlaneNum
            </th>
        </tr>
        <tr>
            <th colspan="7" style="text-align:center; border-top:none;">
                Passangers:
            </th>
        </tr>
        <tr>
       
            <th>
                Първо име
            </th>
            <th>
                Презиме
            </th>
            <th>
                Фамилия
            </th>
            <th>
                Националност
            </th>
            <th>
                Телефонен номер
            </th>
            <th>
                ЕГН
            </th>
            <th>
                Вид на билета
            </th>
        </tr>
        
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nationality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UCN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketType)
            </td>
        </tr>
}
    </tbody>
</table>
